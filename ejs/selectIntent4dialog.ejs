<p><%= message %></p>
<hr>
<form method="post" action="/editDialog" id="form">
<table>
    <tr>
    <td>
    <select type="text" name="intent" style="font-size:16px">
        <% for (var i=0;i < posts.length ; i++ ) { %>
        <option><%= posts[i][1] %></option>
        <% } %>
    </select></td>
    </tr>
    <tr><td><input type="submit" value="この質問内容を選択" style="font-size:16px;"></td></tr>
</table>
</form>
<p><a href="/editChat">対話編集ページに戻る</a></p>
<p><a href="/">トップページに戻る</a></p>
<script>
document.getElementById('form').onsubmit = function(){
    var keyword = document.getElementById('form').intent.value;
    if (keyword.length < 1){
        window.alert('質問内容を選んでください');
        return false;
    }
}
</script>
